# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST     /addProduct                  controllers.EsProductController.addProduct(request : Request)
GET      /getProductById/:id          controllers.EsProductController.getProductById(id : String)
GET      /getBySpecId/:specId         controllers.EsProductController.getBySpecId(specId : String)

POST     /addProduct1                  controllers.ProductController.addProduct1(request : Request)
GET      /getByUserId/:user_id          controllers.ProductController.getByUserId(user_id : Integer)

